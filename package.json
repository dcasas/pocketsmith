{
  "name": "pocketsmith",
  "version": "0.2.0",
  "description": "PocketSmith api wrapper for Node.",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm i -g typescript typings && npm i && typings i",
    "lint": "tslint -t verbose -c tslint.json $(find ./src -name *.ts)",
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec $(find ./test -name *.spec.js)",
    "test-watch": "NODE_ENV=test mocha --timeout 5000 $(find ./test -name *.spec.js) --watch",
    "compile": "rimraf dist/* && tsc",
    "check-release": "npm run compile && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maraisr/pocketsmith.git"
  },
  "keywords": [
    "pocketsmith",
    "budget",
    "api",
    "wrapper"
  ],
  "author": "Marais Rossouw <me@maraisr.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maraisr/pocketsmith/issues"
  },
  "homepage": "https://github.com/maraisr/pocketsmith#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "got": "^6.3.0"
  },
  "devDependencies": {
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "got": "^6.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nock": "^8.1.0",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  }
}
